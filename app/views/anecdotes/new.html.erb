<% provide(:title, "Anecdote") %>
<h1>Anecdote</h1>

<div class="row">
  <div class="span6 offset3">
    <%= form_for(:anecdote, url: '/anecdote') do |f| %>

      <%= f.label :content %>
      <%= f.text_field :content %>
       
      <%= f.label :theme %>
      <%= f.select(:theme_id, Theme.all.map {|c| [ c.content, c.id ] }) %>

      <%= f.submit "Send", class: "btn btn-large btn-primary" %>
    <% end %>
  </div>
</div>